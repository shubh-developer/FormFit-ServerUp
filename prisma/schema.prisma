generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                   Int       @id @default(autoincrement())
  email                String    @unique
  password_hash        String
  name                 String
  phone                String?
  address              String?
  date_of_birth        DateTime?
  emergency_contact    String?
  medical_conditions   String?
  allergies            String?
  preferences          Json?
  is_active            Boolean   @default(true)
  email_verified       Boolean   @default(false)
  verification_token   String?
  reset_token          String?
  reset_token_expires  DateTime?
  created_at           DateTime  @default(now())
  updated_at           DateTime  @updatedAt

  @@map("users")
}

model AdminSession {
  id          Int       @id @default(autoincrement())
  username    String
  ip_address  String?
  user_agent  String?
  login_time  DateTime  @default(now())
  logout_time String?
  is_active   Boolean   @default(true)

  @@map("admin_sessions")
}

model Booking {
  id                   Int       @id @default(autoincrement())
  name                 String
  contact              String
  email                String
  address              String
  service_type         String
  oil_type             String?
  date_time            String
  injury_note          String?
  pain_areas           Json?
  wellness_assessment  String?
  is_urgent            Boolean   @default(false)
  payment_status       String    @default("Pending")
  status               String    @default("pending")
  therapist_notes      String?
  created_at           String    @default("now()")
  updated_at           String    @default("now()")
  photo_url            String?
  amount               Decimal?
  date_of_birth        String?
  height               Int?
  weight               Int?
  blood_group          String?
  nutrition_guide      String?

  @@map("bookings")
}

model AdminUser {
  id             Int       @id @default(autoincrement())
  username       String    @unique
  password_hash  String
  email          String?
  full_name      String?
  contact_number String?
  address        String?
  photo_url      String?
  pan_card       String?
  aadhar_card    String?
  role           String    @default("admin")
  is_active      Boolean   @default(true)
  last_login     DateTime?
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt

  @@map("admin_users")
}

model Inquiry {
  id         Int       @id @default(autoincrement())
  name       String
  phone      String
  message    String
  status     String    @default("new")
  response   String?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  email      String?

  @@map("inquiries")
}

model MasterLogin {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  password_hash String
  full_name     String?
  email         String?
  role          String    @default("master")
  is_active     Boolean   @default(true)
  last_login    DateTime?
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  @@map("master_login")
}

model Offer {
  id          Int       @id @default(autoincrement())
  title       String
  discount    String
  code        String    @unique
  valid_until DateTime
  status      String    @default("Active")
  created_at  DateTime  @default(now())

  @@map("offers")
}

model Oil {
  id          String    @id
  name        String
  description String
  benefits    Json
  best_for    Json
  is_active   Boolean   @default(true)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  @@map("oils")
}

model Package {
  id                  Int      @id @default(autoincrement())
  package_type        String
  title               String
  description         String?
  discount_percentage Int?
  original_price      Int
  discounted_price    Int
  sessions            Int
  validity_days       Int
  features            Json
  status              String   @default("active")
  created_at          DateTime @default(now())

  @@map("packages")
}

model Service {
  id          String    @id
  name        String
  duration    String
  price       Int
  description String
  benefits    Json
  is_active   Boolean   @default(true)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  @@map("services")
}

model UserSession {
  id         Int      @id @default(autoincrement())
  user_id    Int
  ip_address String?
  user_agent String?
  login_time DateTime @default(now())

  @@map("user_sessions")
}

model UserTherapy {
  id                   Int       @id @default(autoincrement())
  email                String    @unique
  name                 String?
  phone                String?
  address              String?
  date_of_birth        DateTime?
  emergency_contact    String?
  medical_conditions   String?
  allergies            String?
  preferences          String?
  is_active            Boolean   @default(true)
  email_verified       Boolean   @default(false)
  verification_token   String?
  reset_token          String?
  reset_token_expires  DateTime?
  created_at           DateTime  @default(now())
  updated_at           DateTime  @default(now())
  password_hash        String?

  @@map("users_therapy")
}

model TherapistAvailability {
  id           Int      @id @default(autoincrement())
  therapist_id String
  date         DateTime @db.Date
  start_time   DateTime @db.Time
  end_time     DateTime @db.Time
  is_available Boolean  @default(true)
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now())

  @@map("therapist_availability")
}

model RealTimeData {
  id           Int      @id @default(autoincrement())
  metric_name  String
  metric_value Json?    @db.JsonB
  timestamp    DateTime @default(now())

  @@map("real_time_data")
}

model FeedbackSecurityAudit {
  id           Int      @id @default(autoincrement())
  booking_id   Int      @unique
  client_email String?
  client_phone String?
  ip_address   String?
  user_agent   String?
  action_type  String?
  status       String?
  reason       String?
  created_at   DateTime @default(now())

  @@map("feedback_security_audit")
}

model Feedback {
  id           Int      @id @default(autoincrement())
  name         String?
  rating       Int?
  comment      String?
  booking_id   Int      @unique
  client_email String?
  client_phone String?
  ip_address   String?
  user_agent   String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  @@map("feedback")
}

model ClientSession {
  id          Int       @id @default(autoincrement())
  user_id     Int
  token_hash  String    @unique
  ip_address  String?
  user_agent  String?
  login_time  DateTime  @default(now())
  logout_time String?
  is_active   Boolean   @default(true)
  expires_at  String?

  @@map("client_sessions")
}

model AppointmentTracking {
  id           Int       @id @default(autoincrement())
  booking_id   Int
  status       String
  notes        String?
  therapist_id String?
  start_time   DateTime?
  end_time     DateTime?
  created_at   DateTime  @default(now())

  @@map("appointment_tracking")
}

